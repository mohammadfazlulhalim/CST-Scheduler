<div class="container-fluid py-5 px-5">
    <h1 class="text-center fw-bold">{{title}}</h1>
    <table class="table text-center">
        <thead>
        <tr>
            <th scope="col">Instructor Number</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {{#if instructorList}}
            {{#each instructorList}}
                <tr>
                    <td>{{this.instructorID}}</td>
                    <td>{{this.firstName}}</td>
                    <td>{{this.lastName}}</td>

                    <td>
                        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal"
                                data-target="#editModal" value="{{this.instructorID}}"> Edit
                        </button>
                        <button type="button" class="btn btn-danger btn-sm" data-toggle="modal"
                                data-target="#deleteModal" value="{{this.instructorID}}">Delete
                        </button>
                    </td>

                </tr>


                <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <label for="editID">ID:</label>
                                <input type="text" class="form-control" id="editID" readonly>
                                <label for="editFirstName">First Name:</label>
                                <input type="text" class="form-control" id="editFirstName">
                                <label for="editLastName">Last Name:</label>
                                <input type="text" class="form-control" id="editLastName">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel"
                     aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p>Are you sure you want to delete this instructor with ID {{this.instructorID}}?</p>
                            </div>
                        </div>
                    </div>
                </div>

            {{/each}}
        {{else}}
            <tr>
                <td></td>
                <td>Nothing to display at the moment</td>
            </tr>
        {{/if}}
        </tbody>
    </table>
    <div>

        <div class>
            <a class="btn btn-outline-success" href="/">Go Back</a>
            <button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#addModal">Add new
                Program
            </button>
        </div>
    </div>
</div>



<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <label for="addID">ID:</label>
                <input type="text" class="form-control" id="addID">
                <label for="addFirstName">First Name:</label>
                <input type="text" class="form-control" id="addFirstName">
                <label for="addLastName">Last Name:</label>
                <input type="text" class="form-control" id="addLastName">
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

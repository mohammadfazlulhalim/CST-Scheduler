<div>
    <div id="modal">

    </div>
    <div id="main">
        <!--change this to a loop later-->
        <div id="tabBar">

        </div>
        {{#each groupArray as | grpLetter | }}
            <div id="group{{grpLetter}}">
                <div id="calender{{grpLetter}}">
                    <h2>Group {{grpLetter}} Calendar</h2>
                    <table class="table">
                        <thead>
                        <th scope="col">

                        </th>
                        <th scope="col">
                            Monday
                        </th>
                        <th scope="col">
                            Tuesday
                        </th>
                        <th scope="col">
                            Wednesday
                        </th>
                        <th scope="col">
                            Thursday
                        </th>
                        <th scope="col">
                            Friday
                        </th>
                        </thead>
                        <tr>

                        </tr>
                        {{#each tArray in groupArray.timeslotMatrix }}
                            <!--loops each timeslot, outer loop is hours, inner loop is days  -->
                            <tr>
                                <td>{{tArray.id}}</td>
                                {{#each timeObj in tArray}}
                                    {{#if timeObj.id}}
                                        <td>groupArray[grpLetter].timeslotMatrix[j][i]</td>
                                    {{/if}}
                                {{/each}}
                            </tr>
                        {{/each}}
                    </table>

                </div>
                <div id="courseList{{grpLetter}}">
                    <h2>Group {{grpLetter}} Courses</h2>
                    {{#each COArray as | coObj | }}
                        {{#if eq coObj ../grpLetter }}

                            <div class="card">
                                <h3>Name: {{coObj.name}}</h3>
                            </div>
                        {{/if}}
                    {{/each}}

                </div>
            </div>
        {{/each}}

    </div>
</div>